{
  "exclude": [
    "./test",
    "./tap-snapshots"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  }
}
